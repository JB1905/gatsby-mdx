{
  "name": "gatsby-mdx",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/buz-zard/gatsby-mdx#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buz-zard/gatsby-mdx.git"
  },
  "license": "MIT",
  "author": "Karolis Å arapnickis",
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "scripts": {
    "build": "lerna run build --ignore @demos/*",
    "clean": "lerna run clean",
    "format": "run-p format:*",
    "format:package-json": "sort-package-json package.json packages/*/package.json",
    "format:prettier": "prettier --write '**/*.*'",
    "git:sync-branches": "git branch --merged master --no-color | grep -v master | grep -v stable | xargs git branch -d",
    "git:sync-tags": "git tag -d $(git tag) && git fetch --tags",
    "lint": "eslint .",
    "qa": "run-p lint test",
    "release": "run-s git:sync-tags clean build qa && lerna publish",
    "release-canary": "yarn release --canary --preid beta",
    "test": "lerna run test --ignore @demos/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@k.sh/eslint-config": "^1.6.0",
    "babel-eslint": "^10.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.0",
    "lerna": "^3.8.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "sort-package-json": "^1.17.0"
  },
  "lint-staged": {
    "**/package.json": [
      "sort-package-json",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "pretty-quick --staged"
    ]
  }
}
